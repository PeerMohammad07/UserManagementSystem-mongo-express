<% include("../layouts/header.ejs") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<div class="bg-light vh-100 ">
  <form class="pt-3" method="post" action="" onsubmit="return validate();">


  <div class="container w-25 border border-dark border-2 rounded  py-3 px-2">
    <h2 class="text-center mb-3">LOGIN</h2>
    <!--alert-->
    <% if(typeof message !== "undefined"){%>
      <div class="alert alert-success text-center alert-dismissible alert-reg" role="alert" id=alertBox ><%=message   %>
      <!-- <button type="button" class="btn-close " data-bs-dismiss="alert" aria-label="Close"></button> -->
      </div> 
    <%}%>
     <!--name-->
 <div class="form-outline mb-1">
  <label class="form-label" for="form2Example2">Name</label>
  <input type="text" name="name" required id="form2Example2" class="form-control  custom-input" />
</div>

  <!-- Email input -->
  <div class="form-outline mb-1">
    <label class="form-label" for="form2Example1">Email address</label>
    <input type="email" name="email" required id="form2Example1" class="form-control  custom-input" />
  </div>

  <!-- Password input -->
  <div class="form-outline mb-1 ">
    <label class="form-label" for="form2Example2">Password</label>
    <input type="password" name="password"  required id="form2Example2" class="form-control custom-input" />
  </div>

  <!-- mobile -->
  <div class="form-outline ">
    <label class="form-label" for="form2Example2">Mobile No</label>
    <input type="number" name="mobile" required id="form2Example2" class="form-control  custom-input" />
  </div>

  <!-- 2 column grid layout for inline styling -->
  <div class="row mb-1">
    <div class="col d-flex justify-content-center">
    </div>
  </div>


  <!-- //terms and service -->
  <div class="text-center">
    <p>I agree all statements in<a href="">Terms of service</a></p>
    <!-- <p>or sign up with:</p> -->
  </div>

  <!-- Submit button -->
  <div class="text-center">
  <button type="submit" class="btn btn-primary  btn-block mb-3">Sign in</button>
</div>
  <!-- Register buttons -->
  <div class="text-center">
    <p>Have already an account?<a href="/login">Login here</a></p>
    <!-- <p>or sign up with:</p> -->
  </div>
</div>
</form>
</div>


<!-- //css -->
<style>
  .custom-input {
    width: 300px; /* Set the desired width */
    height: 30px; /* Set the desired height */
  }
  #alertBox {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #f0f0f0;
    border: 1px solid #ccc;
    padding: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

</style>
<script>
  function validate(){
    let name = document.getElementById('form2Example2')
    if(name.value.trim()==""){
      alert("blank user name");
        return false;
    }else{
      return true;
    }

  }
</script>
